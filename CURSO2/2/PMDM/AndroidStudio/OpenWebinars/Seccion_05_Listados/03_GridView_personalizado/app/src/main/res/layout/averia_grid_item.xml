<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_camera_black_24dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Espejo roto"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewFoto"
        app:layout_constraintRight_toRightOf="@+id/imageViewFoto"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFoto" />

    <ImageView
        android:id="@+id/imageViewPresupuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitulo"
        app:srcCompat="@drawable/ic_assignment_black_24dp"
        app:layout_constraintRight_toLeftOf="@+id/textViewPresupuesto"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewTitulo"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <TextView
        android:id="@+id/textViewPresupuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/imageViewPresupuesto"
        app:layout_constraintRight_toRightOf="@+id/textViewTitulo"
        app:layout_constraintTop_toTopOf="@+id/imageViewPresupuesto"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPresupuesto"
        android:layout_marginBottom="0dp" />
</android.support.constraint.ConstraintLayout>